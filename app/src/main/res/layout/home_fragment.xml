<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jiguobin="jiguobin"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <include layout="@layout/common_title"/>
<jiguobin.com.p2pinvest.ui.MyScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">
            <!--<android.support.v4.view.ViewPager-->
                <!--android:id="@+id/vp_home"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent">-->
            <!--</android.support.v4.view.ViewPager>-->
            <!--<com.viewpagerindicator.CirclePageIndicator-->
                <!--android:id="@+id/cp_home_indicator"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginBottom="5dp"-->
                <!--android:layout_gravity="bottom|center_horizontal|bottom"/>-->

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </FrameLayout>
        <TextView
            android:id="@+id/tv_home_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="泽鑫计划第一期"
            android:drawableRight="@drawable/recommend"
            android:drawablePadding="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/home_back_unselected"
            android:textSize="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="本息保障"
                android:background="@drawable/home_attribute_bg"
                android:gravity="center"
                android:padding="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="每日计息"
                android:background="@drawable/home_attribute_bg"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>
            <TextView
                android:layout_width="0dp"
                 android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="高额收益"
                android:background="@drawable/home_attribute_bg"
                android:gravity="center"
                android:padding="5dp"/>
        </LinearLayout>
        <jiguobin.com.p2pinvest.ui.RoundProgress
            android:id="@+id/roundPro_home"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="10dp"
            jiguobin:roundColor="@color/more_text"
            jiguobin:roundProgressColor="@color/round_red_common"
            jiguobin:textColor="@color/title_back"
            jiguobin:textSize="20dp"
            jiguobin:roundWith="10dp"
            jiguobin:max="100"
            jiguobin:progress="80"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预期年利率:"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tv_home_yearrater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10%+2%"
                android:textSize="20sp"/>
        </LinearLayout>
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/home"
            android:text="立即加入"
            android:textSize="30sp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风险保障金由泽鑫银行开始"
            android:drawableLeft="@drawable/guarantee_icon"/>
    </LinearLayout>
</jiguobin.com.p2pinvest.ui.MyScrollView>
</LinearLayout>